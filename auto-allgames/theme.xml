<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system, basic, detailed">
		<text name="logoText">
			<text>all</text>
			<color>${auto_d}</color>
		</text>
	</view>

	<view name="system">

		<image name="background" extra="true">
			<!-- console color -->
			<color>${auto}</color>
		</image>
				
		<image name="logo">
			<path>./logo.png</path>
        </image>

		<image name="console_overlay" extra="true">
			<path>./console.png</path>
		</image>
		
	</view>

	<view name="basic, detailed">
	
		<image name="background" extra="true">
			<color>${auto}</color>
		</image>

		<textlist name="gamelist">
			<!-- darker console color -->
			<selectorColor>${auto_d}ff${selector_opacity}</selectorColor>
			<selectedColor>${auto}</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>000000</secondaryColor>
		</textlist>

	</view>

	<view name="detailed">

		<image name="Bottom Console Image" extra="true">
			<path>./console.png</path>
		</image>

	</view>
	
</theme>
