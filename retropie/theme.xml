<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<!-- console color -->
			<color>${retropie}</color>
		</image>
				
		<image name="logo">
			<path>./logo.png</path>
        </image>

		<text name="logoText">
			<color>${retropie_d}</color>
		</text>

		<image name="console_overlay" extra="true">
			<path>./console.png</path>
		</image>
		
	</view>

	<view name="basic, detailed">

		<text name="logoText">
			<color>${retropie_d}</color>
		</text>

		<image name="background" extra="true">
			<color>${retropie}</color>
		</image>

		<textlist name="gamelist">
			<!-- darker console color -->
			<selectorColor>${retropie_d}${selector_opacity}</selectorColor>
			<selectedColor>${retropie}</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>000000</secondaryColor>
		</textlist>

	</view>

	<view name="detailed">

		<image name="Bottom Console Image" extra="true">
			<path>./console.png</path>
		</image>

	</view>
	
</theme>
