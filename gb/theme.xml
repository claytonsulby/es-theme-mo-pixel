<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system, basic, detailed">

		<text name="logoText">
			<fontPath>./../art/fonts/${gb_font}.ttf</fontPath>
			<color>${gb_d}</color>
		</text>

		<image name="background" extra="true">
			<color>${gb}</color>
		</image>
	
	</view>

	<view name="basic, detailed">

		<textlist name="gamelist">
			<selectorColor>${gb_d}${selector_opacity}</selectorColor>
			<selectedColor>${gb}</selectedColor>
		</textlist>

	</view>
	
</theme>
