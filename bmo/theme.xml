<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system, basic, detailed">

		<text name="logoText">
			<text>bmo</text>
			<color>${bmo_d}</color>
		</text>

		<image name="background" extra="true">
			<color>${bmo}</color>
			<path>./../art/systemback_w.png</path>
<!--		<path>./../art/bmo_systemback.png</path>-->
		</image>

	</view>

	<view name="system">

		<image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.7 0.7</maxSize>
			<path>./bmo_console.png</path>
		</image>
		
	</view>

	<view name="basic, detailed">

		<textlist name="gamelist">
			<selectorColor>${bmo_d}</selectorColor>
			<selectedColor>${bmo}</selectedColor>
		</textlist>

	</view>
	
</theme>

