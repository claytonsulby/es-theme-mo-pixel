<theme>
    <formatVersion>3</formatVersion>

	<variables>

		<nes>d6d5d2</nes>
		<nes_d>bdbcb9</nes_d>
		<snes>f62121</snes>
		<snes_d>d91d1d</snes_d>
		<gb>bc15ff</gb>
		<gb_d>a613e1</gb_d>
		<gba>4b2ce4</gba>
		<gba_d>4227c9</gba_d>
		<gbc>c87af8</gbc>
		<gbc_d>b06cdb</gbc_d>
		<psx>d52445</psx>
		<psx_d>bc203d</psx_d>
		<psp>a162e0</psp>
		<psp_d>8e56c6</psp_d>
		<n64>bf00ff</n64>
		<n64_d>a900e1</n64_d>
		<nds>ffc0cb</nds>
		<nds_d>e1a9b3</nds_d>

		<steam>134073</steam>
		<steam_d>113865</steam_d>
		<retropie>ffd800</retropie>
		<retropie_d>e1bf00</retropie_d>
		<custom>ffffff</custom>
		<custom_d>000000</custom_d>
		<auto>000000</auto>
		<auto_d>ffffff</auto_d>

		<bmo>D6EBD7</bmo>
		<bmo_d>65B7A5</bmo_d>
		<gmo>FFECFF</gmo>
		<gmo_d>FFC4FF</gmo_d>
		<lich>3be067</lich>
		<lich_d>34c65b</lich_d>
		<enchiridion>ffbf00</enchiridion>
		<enchiridion_d>e1a900</enchiridion_d>
		<marcy>5e155c</marcy>
		<marcy_d>531351</marcy_d>
		<hambo>EF3C4F</hambo>
		<hambo_d>d33546</hambo_d>
		<gunter>294965</gunter>
		<gunter_d>244059</gunter_d>
		<prismo>f9fc00</prismo>
		<prismo_d>dcde00</prismo_d>

		<selector_opacity>ff</selector_opacity>

	</variables>

	<view name="basic, detailed, system">

		<image name="logo">
			<maxSize>0.315 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<path>./${system.name}/logo.png</path>
		</image>

		<text name="logoText">
			<text>${system.fullName}</text>
			<origin>0.5 0.5</origin>
			<fontPath>./art/pixel2.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
		</text>

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>000000</color>
			<path>./art/systemback.png</path>
		</image>

		
	</view>

	<view name="system">
		
		<carousel name="systemcarousel">
			<type>horizontal</type>
			<pos>0 0.75</pos>
			<logoScale>1.8</logoScale>
			<color>00000000</color>
			<maxLogoCount>1</maxLogoCount>
		</carousel>

		<text name="logoText">
			<color>ffffff</color>
		</text>
		
		<text name="systemInfo">
			<pos>0 0.900</pos>
			<backgroundColor>00000000</backgroundColor>
			<color>55555500</color>
			<fontPath>./art/font.ttf</fontPath>
			<fontSize>0.055</fontSize>
		</text>

		<image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.7 0.7</maxSize>
			<path>./${system.name}/console.png</path>
		</image>

	</view>

    <view name="basic, detailed">

		<text name="logoText">
			<color>ffffff</color>
		</text>

		<textlist name="gamelist">
			<pos>0.03 0.25</pos>
			<size>1.0 0.65</size>
			<horizontalMargin>0.01</horizontalMargin>
			<fontSize>0.06</fontSize>
			<selectorColor>ffffff</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>000000</secondaryColor>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/scrollSound.wav</scrollSound>
		</textlist>

	</view>

	<view name="basic">

		<image name="logo">
			<pos>0.5 0.1</pos>
		</image>

		<text name="logoText">
			<fontSize>0.06</fontSize>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<pos>0.5 0.1</pos>
		</text>

		<textlist name="gamelist">
			<alignment>left</alignment>
		</textlist>
		
	</view>

	<view name="detailed">

		<image name="logo">
			<pos>0.25 0.103</pos>
		</image>

		<text name="logoText">
			<pos>0.25 0.103</pos>
		</text>
		
		<textlist name="gamelist">
			<alignment>left</alignment>
		</textlist>

		<image name="md_image">
			<pos>0.766 0.322</pos>
			<maxSize>0.366 0.480</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>15</zIndex>
		</image>

		<image name="Bottom Console Image" extra="true">
			<tile>false</tile>
			<pos>0.8 0.8</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.25 0.25</maxSize>
			<path>./${system.name}/console.png</path>
		</image>

	</view>

</theme>