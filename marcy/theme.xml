<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0.0 0.0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>5e155c</color>
			<path>./../art/systemback.png</path>
		</image>
		
		<image name="console_overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.7 0.7</maxSize>
			<path>./console.png</path>
		</image>
		
		<image name="logo">
			<path>./logo.png</path>
        </image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
		
	</view>

	<view name="basic, detailed">
	</view>

	<view name="basic">

		<image name="logo">
			<path>./logo_w.png</path>
			<pos>0.5 0.103</pos>
			<maxSize>0.315 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>5e155c</color>
			<path>./../art/systemback.png</path>
		</image>	
	
		<textlist name="gamelist">
			<pos>0.034 0.235</pos>
			<size>0.933 0.66</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontSize>0.04</fontSize>
			<selectorColor>531351${selector_opacity}</selectorColor>
			<selectedColor>5e155c</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>000000</secondaryColor>
			<forceUppercase>1</forceUppercase>
		</textlist>
		
	</view>

	<view name="detailed">
	
		<image name="logo">
			<path>./logo_w.png</path>
			<pos>0.25 0.103</pos>
			<maxSize>0.315 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>5e155c</color>
			<path>./../art/systemback.png</path>
		</image>	
	
		<textlist name="gamelist">
			<pos>0.034 0.235</pos>
			<size>0.933 0.66</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontSize>0.04</fontSize>
			<selectorColor>531351${selector_opacity}</selectorColor>
			<selectedColor>5e155c</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>000000</secondaryColor>
			<forceUppercase>1</forceUppercase>
		</textlist>
		
		<image name="Bottom Console Image" extra="true">
			<tile>false</tile>
			<pos>0.8 0.8</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.25 0.25</maxSize>
			<path>./console.png</path>
		</image>

	</view>
	
</theme>
