<theme>
	<formatVersion>3</formatVersion>
	<include>./../pixel.xml</include>
	
	<view name="system, basic, detailed">
		
		<text name="logoText">
			<fontPath>./../art/fonts/${gba_font}.ttf</fontPath>
			<color>${gba_d}</color>
		</text>
		
		<image name="background" extra="true">
			<color>${gba}</color>
		</image>
		
	</view>
	
	<view name="basic, detailed">
		
		<textlist name="gamelist">
			<selectorColor>${gba_d}${selector_opacity}</selectorColor>
			<selectedColor>${gba}</selectedColor>
		</textlist>
		
	</view>
	
</theme>
