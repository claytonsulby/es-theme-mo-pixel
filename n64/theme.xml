<theme>
    <formatVersion>3</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system, basic, detailed">

		<text name="logoText">
			<fontPath>./../art/fonts/${n64_font}.ttf</fontPath>
			<color>${n64_d}</color>
		</text>

		<image name="background" extra="true">
			<color>${n64}</color>
		</image>
	
	</view>

	<view name="basic, detailed">

		<textlist name="gamelist">
			<selectorColor>${n64_d}${selector_opacity}</selectorColor>
			<selectedColor>${n64}</selectedColor>
		</textlist>

	</view>
	
</theme>